{
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build ngrx-handlers --prod && cp README.md ./dist/ngrx-handlers",
    "lint": "npm run prettier && npm run eslint",
    "lint:fix": "npm run prettier:fix && npm run eslint:fix",
    "prettier": "prettier --check . --ignore-path .lintignore",
    "prettier:fix": "prettier --write . --ignore-path .lintignore",
    "eslint": "eslint . --ext .js,.ts --ignore-path .lintignore",
    "eslint:fix": "eslint . --ext .js,.ts --ignore-path .lintignore --fix",
    "test": "jest",
    "test:coveralls": "npm run test && coveralls < coverage/lcov.info",
    "publish": "npm run build && cd ./dist/ngrx-handlers && npm publish"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,html,scss,json,md}": "prettier --write --ignore-path .lintignore",
    "*.{js,ts}": "eslint --fix"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~12.0.3",
    "@angular/common": "~12.0.3",
    "@angular/compiler": "~12.0.3",
    "@angular/core": "~12.0.3",
    "@angular/forms": "~12.0.3",
    "@angular/platform-browser": "~12.0.3",
    "@angular/platform-browser-dynamic": "~12.0.3",
    "@angular/router": "~12.0.3",
    "@ngrx/effects": "~12.0.0",
    "@ngrx/store": "~12.0.0",
    "rxjs": "~6.6.3",
    "tslib": "^2.2.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.0.3",
    "@angular/cli": "~12.0.3",
    "@angular/compiler-cli": "~12.0.3",
    "@types/jest": "^26.0.16",
    "@types/node": "^14.14.10",
    "@typescript-eslint/eslint-plugin": "~4.9.0",
    "@typescript-eslint/parser": "~4.9.0",
    "coveralls": "~3.1.0",
    "eslint": "~7.15.0",
    "eslint-config-prettier": "~7.0.0",
    "husky": "~4.3.4",
    "jest": "~26.6.3",
    "lint-staged": "~10.5.3",
    "ng-packagr": "~12.0.2",
    "prettier": "~2.2.0",
    "ts-jest": "~26.4.4",
    "ts-node": "~9.1.0",
    "typescript": "4.2.4"
  }
}
